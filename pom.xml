         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.hotel</groupId>
    <artifactId>org_hotel_packages</artifactId>
    <packaging>pom</packaging>
    <name>Spring OSGi Bundle</name>
    <version>1.0-SNAPSHOT</version>
    <url>http://www.springframework.org/osgi</url>


    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.2.1.RELEASE</version>
    </parent>

    <properties>
        <slf4j.version>1.7.8</slf4j.version>
        <spring.maven.artifact.version>2.5.6.SEC01</spring.maven.artifact.version>
        <spring.osgi.version>1.2.1</spring.osgi.version>
        <equinox.ver>3.2.2</equinox.ver>
        <autoconfig-plugin.version>1.2</autoconfig-plugin.version>
    </properties>

    <modules>
        <module>hotel-packages-biz</module>
        <module>hotel-packages-core</module>
        <module>hotel-packages-dal</module>
        <module>hotel-packages-model</module>
        <module>hotel-packages-start</module>
        <module>hotel-packages-web</module>
        <module>hotel-packages-facade</module>
    </modules>

