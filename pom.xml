                    </exclusion>
                    <exclusion>
                        <groupId>org.apache.tomcat.embed</groupId>
                        <artifactId>tomcat-embed-websocket</artifactId>
                    </exclusion>

                </exclusions>
            </dependency>


            <dependency>
                <groupId>org.apache.curator</groupId>
