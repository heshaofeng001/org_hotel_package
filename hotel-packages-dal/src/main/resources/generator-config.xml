<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">


<generatorConfiguration>

    <context id="MySQLTables" targetRuntime="MyBatis3">
        <!--去除注释  -->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://139.224.250.223:3306/hotel"
                        userId="root"
                        password="hsf@1234">
        </jdbcConnection>
        <!--此处配置一些类型转换解析器 可以自定义一些 -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="org.hotel.packages.dal.po"
                            targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!--生成SQLMAP文件 -->
        <sqlMapGenerator targetPackage="resources/mappers" targetProject="src/main">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>
        <javaClientGenerator type="XMLMAPPER" targetPackage="org.hotel.packages.dal"
                             targetProject="src/main/java" implementationPackage="org.hotel.packages.dal.impl">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <table tableName="hotel_package" enableSelectByExample="true" enableDeleteByExample="true"
               enableCountByExample="true" enableUpdateByExample="true" domainObjectName="PackageInfoBO">
            <generatedKey column="package_id" sqlStatement="MySql" identity="true"/>
            <columnOverride column="package_id" javaType="String"/>
            <columnOverride column="package_status" javaType="String"/>
            <columnOverride column="owner_id" javaType="String"/>
        </table>

        <table tableName="hotel_customer" enableSelectByExample="true" enableDeleteByExample="true"
               enableCountByExample="true" enableUpdateByExample="true" domainObjectName="CustomerBO">
            <generatedKey column="customer_id" sqlStatement="MySql" identity="true"/>
            <columnOverride column="customer_id" javaType="String"/>
            <columnOverride column="customer_name" javaType="String"/>
            <columnOverride column="customer_status" javaType="String"/>
            <columnOverride column="check_in_date" javaType="java.util.Date"/>
            <columnOverride column="check_out_date" javaType="java.util.Date"/>
        </table>

        <table tableName="hotel_cabinet" enableSelectByExample="true" enableDeleteByExample="true"
               enableCountByExample="true" enableUpdateByExample="true" domainObjectName="CabinetBO">
            <generatedKey column="cabinet_id" sqlStatement="MySql" identity="true"/>
            <columnOverride column="size" javaType="String"/>
            <columnOverride column="cabinet_status" javaType="String"/>
            <columnOverride column="number" javaType="String"/>
        </table>

        <table tableName="hotel_cabinet_package_relation" enableSelectByExample="true" enableDeleteByExample="true"
               enableCountByExample="true" enableUpdateByExample="true" domainObjectName="CabinetPackageRelationBO">
            <generatedKey column="cabinet_id" sqlStatement="MySql" identity="true"/>
            <columnOverride column="cabinet_id" javaType="String"/>
            <columnOverride column="package_id" javaType="String"/>
            <columnOverride column="status" javaType="String"/>
        </table>
    </context>
</generatorConfiguration>